<%= form_for(@pet) do |f| %>
  <% if @pet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

      <ul>
      <% @pet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <!-- sets the pet's user_id as the current user -->
  <%= f.hidden_field :user_id, current_user.id %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :family %><br>
    <%= f.select(:family, options_for_select([['Dog', 'Dog'], ['Cat', 'Cat'], ['Bird', 'Bird'], ['Rat/Mouse', 'Rat/Mouse'], ['Guinea Pig', 'Guinea Pig'], ['Rabbit', 'Rabbit'], ['Fish', 'Fish'], ['Crab', 'Crab'], ['Horse', 'Horse'], ['Reptile', 'Reptile'], ['Amphibian', 'Amphibian'], ['Amphibian', 'Amphibian'], ['Exotic/ Unusual', 'Exotic']])) %>
  </div>
  <div class="field">
    <%= f.label :species %><br>
    <%= f.text_field :species %>
  </div>
  <div class="field">
    <%= f.label :picture %><br>
    <%= f.text_area :picture %>
  </div>
  <div class="field">
    <%= f.label :dob %><br>
    <%= f.datetime_select :dob %>
  </div>
  <div class="field">
    <%= f.label :favourite_toy %><br>
    <%= f.text_field :favourite_toy %>
  </div>
  <div class="field">
    <%= f.label :favourite_place %><br>
    <%= f.text_field :favourite_place %>
  </div>
  <div class="field">
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
