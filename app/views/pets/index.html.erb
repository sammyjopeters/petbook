
<h2>All Pets on Petbook</h2>
  <div class="table-responsive">
      <table class="table table-striped">
        <% @pets.each do |pet| %>
            <tr>
              <td>
                <%= link_to (image_tag "#{pet.picture}", :class => "xs_avatar"), pet_path(pet) %>
              </td>
             <td><%= pet.name %></td>
             <td><%= pet.family %></td>
              <td><%= link_to 'View Profile', pet %></td>
              <% if current_user === pet.user %>
              <td><%= link_to 'Edit', edit_pet_path(pet) %> | <%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>

        <% end %>
      </table>
  </div>


<% if user_signed_in? %>
<%= link_to 'New Pet', new_user_pet_path(current_user), :class => "btn btn-sm btn-primary" %>
<% end %>