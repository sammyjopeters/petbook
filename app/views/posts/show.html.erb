<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @post.user %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p><br />
<%= thing.likes.length %><span class='glyphicon glyphicon-heart'></span>
<% if @post.likes.where(:user_id => current_user.id).exists? %>
    <%= form_tag unlike_post_path(@post) do %>
        <%= hidden_field_tag :post_id, @post.id %>
        <%= submit_tag "Unlike", :class => 'btn btn-default btn-xs' %>
    <% end %>
<% else %>
    <%= form_tag addlike_post_path(@post) do %>
        <%= hidden_field_tag :post_id, @post.id %>
        <%= submit_tag "Like!", :class => 'btn btn-default btn-xs' %>
    <% end %>
<% end %>


<p>
  <strong>Comments:</strong>
  <%= @post.comments %>
</p>

<strong> Make a comment or something:</strong><br />
<%= render partial: 'shared/commentform', locals: {comment: Comment.new} %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
