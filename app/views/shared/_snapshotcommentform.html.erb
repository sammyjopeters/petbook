  <%= form_for(comment) do |f| %>
      <% if comment.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(comment.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
              <% comment.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <%= f.hidden_field :snapshot_id, :value => snapshot.id %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <div class="form-group">
        <%= f.label :content, "Write a comment:" %><br>
        <%= f.text_area :content, :class => 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit 'Post Comment', :class => 'btn btn-sm btn-primary' %>
      </div>
  <% end %>
